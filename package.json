{
  "name": "ymlr-telegram",
  "version": "0.0.1-alpha.1",
  "description": "Support telegram bot to send message, listen, hears...",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src"
  ],
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm test"
      ],
      "after:bump": "pnpm build",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "requireCleanWorkingDir": false,
      "requireBranch": "main",
      "requireUpstream": true,
      "requireCommits": true,
      "commitMessage": "chore: release v${version}",
      "tag": true,
      "tagAnnotation": "${version}",
      "pushArgs": [
        "--follow-tags"
      ],
      "commit": false,
      "push": false
    }
  },
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "ymlr": "^0.0.1-alpha.1",
    "jest": "^29.2.2",
    "lodash.merge": "^4.6.2",
    "nodemon": "^2.0.20",
    "release-it": "^15.6.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "keywords": [
    "telegram",
    "ymlr",
    "ymlr plugin"
  ],
  "scripts": {
    "next": "release-it -i prerelease --no-npm --no-github --changelog",
    "clean": "rm -rf dist",
    "build:pre": "pnpm clean",
    "build": "pnpm build:pre && tsc --project tsconfig.build.json && pnpm build:post",
    "build:post": "node bin/tsconfig && cp package.json ./dist/ && cp README.md ./dist/",
    "doc": "node node_modules/ymlr ./scripts/doc.yaml",
    "start": "node --require ts-node/register node_modules/ymlr",
    "d:start": "nodemon --require ts-node/register --inspect-brk node_modules/.bin/ymlr",
    "d:test": "node --trace-warnings --expose-gc --inspect node_modules/.bin/jest --config=.jest/config.js --runInBand",
    "test:pre": "pnpm lint && pnpm build",
    "test": "pnpm test:pre && pnpm jest --config=.jest/config.js && pnpm test:post",
    "test:post": "pnpm clean",
    "lint": "eslint --ext .ts ./src",
    "publish:npm": "pnpm build && pnpm publish --no-git-checks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/circle2jt/ymlr-telegram.git"
  },
  "author": "circle2jt@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/circle2jt/ymlr-telegram/issues"
  },
  "homepage": "https://github.com/circle2jt/ymlr-telegram#readme",
  "dependencies": {
    "telegraf": "^4.11.2"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public",
    "tag": "alpha"
  }
}